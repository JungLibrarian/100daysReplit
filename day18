#my answer
num = 66666
attempt = 1

while True:
  guess = int(input("guess the number: "))

  if guess == num:
    print("Correct")
    break
    
  elif guess > 0:
    if guess < num:
      print("Too low")
    elif guess > num:
      print("Too high")
    attempt += 1
    continue

  else:
    print("invalid number")
    exit()

print("you took", attempt, "attempts")


#Answer
print("Welcome to Guess the Number.")
